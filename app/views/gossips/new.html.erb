<h1>Let's create a new gossip !</h1>

<%= form_tag url_for(action: 'create'), method: "post" do %>

     <%= label_tag 'Title' %>
     <%= text_field_tag 'title'%>
     <br /> <br />

     <%= label_tag 'Content' %>
     <%= text_area_tag 'content'%>
     <br /> <br />

     <%= label_tag 'Author' %>
     <%= text_field_tag 'author' %>
     <br /> <br />

     <%= submit_tag "Create Post" %>

   <% end %>
