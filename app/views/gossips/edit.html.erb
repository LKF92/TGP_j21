<h1>Edit your gossip</h1>
<p>Not happy with it ? No problem, let's increase the bitchachez level</p>
<div class="container">


  <%= form_for @my_gossip do |f| %>
  <div class="form-group">
    <label>Title</label>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label>New content</label>
    <%= f.text_area :content, class: 'form-control' %>
  </div>
  <div class="form-group">
  <button type="submit" name="button" class="btn btn-primary">Modify gossip</button>
  </div>
</div>



<% end %>
</div>
